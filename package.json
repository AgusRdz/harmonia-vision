{
  "activationEvents": [],
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "harmoniaVision.openCalibrator",
        "title": "%command.openCalibrator%"
      },
      {
        "command": "harmoniaVision.togglePause",
        "title": "%command.togglePause%"
      },
      {
        "command": "harmoniaVision.pauseNow",
        "title": "%command.pauseNow%"
      },
      {
        "command": "harmoniaVision.snoozePause",
        "title": "%command.snoozePause%"
      },
      {
        "command": "harmoniaVision.openStats",
        "title": "%command.openStats%"
      },
      {
        "command": "harmoniaVision.getTimerState",
        "title": "Get Timer State (Internal)"
      }
    ],
    "configuration": {
      "title": "Harmonia Vision",
      "properties": {
        "harmoniaVision.pause.enabled": {
          "type": "boolean",
          "default": false,
          "description": "%config.pause.enabled%"
        },
        "harmoniaVision.pause.workIntervalMinutes": {
          "type": "number",
          "default": 20,
          "minimum": 15,
          "maximum": 60,
          "description": "%config.pause.workIntervalMinutes%"
        },
        "harmoniaVision.pause.breakDurationSeconds": {
          "type": "number",
          "default": 20,
          "minimum": 10,
          "maximum": 60,
          "description": "%config.pause.breakDurationSeconds%"
        },
        "harmoniaVision.pause.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "%config.pause.showStatusBar%"
        },
        "harmoniaVision.statusBar.timerVisibility": {
          "type": "string",
          "enum": [
            "always",
            "auto",
            "hidden"
          ],
          "default": "auto",
          "description": "Controls when the Eye Break timer is shown in the status bar. 'always' shows the timer at all times, 'auto' shows only when running (and hides if Harmonia Zen Pomodoro timer has priority), 'hidden' never shows the timer.",
          "enumDescriptions": [
            "Always show the status bar timer",
            "Show only when timer is running (recommended when using with Harmonia Zen)",
            "Never show the status bar timer"
          ]
        },
        "harmoniaVision.pause.pauseWhenIdle": {
          "type": "boolean",
          "default": true,
          "description": "%config.pause.pauseWhenIdle%"
        }
      }
    }
  },
  "description": "Calibrate editor readability and reduce visual fatigue through ergonomic configuration recommendations",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "eslint": "^8.54.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0"
  },
  "displayName": "Harmonia Vision",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "icon.png",
  "keywords": [
    "accessibility",
    "a11y",
    "ergonomics",
    "eye strain",
    "visual comfort",
    "readability",
    "productivity",
    "typography",
    "font size",
    "line height",
    "letter spacing",
    "cursor",
    "myopia",
    "astigmatism",
    "ghosting",
    "harmonia"
  ],
  "license": "MIT",
  "main": "./out/extension.js",
  "name": "harmonia-vision",
  "publisher": "AgusRdz",
  "repository": {
    "type": "git",
    "url": "https://github.com/AgusRdz/harmonia-vision"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "version": "1.4.0"
}